{
  "version": 2,
  "builds": [
    {
      "src": "SearchMethods/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.10" }
    },
    {
      "src": "build_static.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "SearchMethods/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "SearchMethods.settings"
  }
}
